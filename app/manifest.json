{
    "manifest_version": 2,

    "name": "Ассистент Фанфик в Файл",
    "version": "0.1",
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html",
        "default_title": "Параметры ФвФ"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.fanfiction.net/*"
            ],
            "js": [
                "scripts/utils.js"
            ]
        },
        {
            "matches": ["https://www.fanfiction.net/*"],
            "js": ["scripts/fanfiction.js"]
        }
    ],

    "permissions": [
        "activeTab",
        "webNavigation"
    ]
}