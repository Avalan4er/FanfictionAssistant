{
    "manifest_version": 2,

    "name": "Ассистент Фанфик в Файл",
    "version": "0.1",
    "content_scripts": [
        {
            "matches": [
                "https://www.fanfiction.net/*"
            ],
            "js": [
                "js/common/utils.js",
                "js/common/fanficRepository.js"
            ],
            "css": [
                "css/plates.css"
            ]
        },
        {
            "matches": ["https://www.fanfiction.net/*"],
            "js": [
                "js/fanfiction/fanfiction.js",
                "js/vendor/jquery-3.3.1.min.js"
            ]
        }
    ],
    "background": {
        "scripts": [
            "js/vendor/jquery-3.3.1.min.js",
            "js/common/fanficsApi.js",
            "js/common/fanficRepository.js",
            "js/background/storage.js",
            "js/background/marks.js"
        ],
        "persistent": false
    },

    "permissions": [
        "activeTab",
        "webNavigation",
        "storage",
        "cookies",
        "*://*.fanfics.me/"
    ]
}