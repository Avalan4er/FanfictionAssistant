{
    "manifest_version": 2,

    "name": "Ассистент Фанфик в Файл",
    "version": "0.1",
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html",
        "default_title": "Параметры ФвФ"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.fanfiction.net/*"
            ],
            "js": [
                "scripts/utils.js",
                "scripts/fanficRepository.js"
            ],
            "css": [
                "css/plates.css"
            ]
        },
        {
            "matches": ["https://www.fanfiction.net/*"],
            "js": ["scripts/fanfiction.js"]
        }
    ],
    "background": {
        "scripts": [
            "vendor/jquery-3.3.1.min.js",
            "scripts/storage.js"
        ],
        "persistent": false
    },

    "permissions": [
        "activeTab",
        "webNavigation",
        "storage",
        "cookies",
        "*://*.fanfics.me/"
    ]
}